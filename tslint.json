{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "object-literal-sort-keys": [false],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "interface-name": [true, "never-prefix"],
        "max-line-length": [true, 240],
        "no-namespace": false,
        "max-classes-per-file": [true, 100]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "assets/**",
            "__tests__/**"
        ]
    },
    "rulesDirectory": []
}